---

<Layout title="Our Services - Rebeca Eco Clean">
	<Navbar />
	
	<!-- Page Header -->
	<section class="bg-gradient-to-r from-primary to-primary-dark text-white py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h1 class="text-4xl sm:text-5xl font-bold mb-4">Our Services</h1>
			<p class="text-xl text-accent-soft">Cleaning, painting, pressure washing & construction</p>
		</div>
	</section>

	<!-- Services Grid -->
	<section class="py-16 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				{services.map((service) => (
					<div class="bg-gray-50 rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow">
						<div class="flex items-center mb-4">
							<span class="text-4xl mr-4">{service.icon}</span>
							<h2 class="text-2xl font-bold text-gray-900">{service.title}</h2>
						</div>
						<p class="text-gray-700 mb-6 text-lg">{service.description}</p>
						<ul class="space-y-3">
							{service.features.map((feature) => (
								<li class="flex items-start">
									<svg class="w-5 h-5 text-accent mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<span class="text-gray-700">{feature}</span>
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Additional Info Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="bg-white rounded-lg p-8 shadow-sm">
				<h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">What You Can Expect</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="flex items-start">
						<svg class="w-6 h-6 text-accent mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
						<div>
							<h3 class="font-semibold text-gray-900 mb-1">Eco-Friendly Options</h3>
							<p class="text-gray-600 text-sm">Safe, responsible products where applicable</p>
						</div>
					</div>
					<div class="flex items-start">
						<svg class="w-6 h-6 text-accent mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
						<div>
							<h3 class="font-semibold text-gray-900 mb-1">Professional Equipment</h3>
							<p class="text-gray-600 text-sm">Quality tools and equipment for every service</p>
						</div>
					</div>
					<div class="flex items-start">
						<svg class="w-6 h-6 text-accent mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
						<div>
							<h3 class="font-semibold text-gray-900 mb-1">Trained Professionals</h3>
							<p class="text-gray-600 text-sm">Experienced, background-checked cleaning specialists</p>
						</div>
					</div>
					<div class="flex items-start">
						<svg class="w-6 h-6 text-accent mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
						<div>
							<h3 class="font-semibold text-gray-900 mb-1">Satisfaction Guarantee</h3>
							<p class="text-gray-600 text-sm">100% satisfaction guaranteed or we'll return to fix it</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing CTA -->
	<section class="py-16 bg-primary text-white">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-3xl font-bold mb-4">Customized Pricing for Your Needs</h2>
			<p class="text-xl mb-8 text-accent-soft">
				Every space is unique. Contact us for a personalized quote based on your specific requirements.
			</p>
			<a
				href="/contact"
				class="inline-block bg-accent text-primary px-8 py-3 rounded-lg font-semibold text-lg hover:bg-accent-soft transition-colors shadow-lg"
			>
				Get a Free Quote
			</a>
		</div>
	</section>

	<Footer />
</Layout>
